<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:visibility="visible"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:src="@drawable/notes_dot_ic"
                android:layout_width="5dp"
                android:layout_height="5dp" />
            <!---->

            <TextView
                android:textAlignment="center"
                android:id="@+id/notesTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:text="Meeting - "
                android:textColor="@color/list_background"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notesDescTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/notesTitleTv"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Have a meeting with raj and the original neuro"
                android:textColor="@color/grey"
                android:textSize="14dp"
                android:textStyle="italic" />

            <View
                android:id="@+id/lineView"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:background="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>