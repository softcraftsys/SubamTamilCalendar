<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/month_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/moon1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:layout_alignParentLeft="true" />

        <com.softcraft.calendar.ServiceAndOthers.CalenderTextView
            android:id="@+id/tamil_date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:paddingRight="3dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="8dp"
            android:textStyle="bold"
            android:text="26" />

    </RelativeLayout>

    <com.softcraft.calendar.ServiceAndOthers.CalenderTextView
        android:id="@+id/date"
        android:layout_below="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16dp"
        android:text="1">
    </com.softcraft.calendar.ServiceAndOthers.CalenderTextView>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_below="@id/date"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mugurtham_image_show"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:layout_marginRight="1dp"
            android:layout_alignParentRight="true" />


        <ImageView
            android:id="@+id/kirthigai_image_show"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:layout_marginLeft="1dp"
            android:layout_alignParentLeft="true" />
        <View
            android:id="@+id/festival_show_line"
            android:layout_below="@+id/kirthigai_image_show"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="2dp"/>

    </RelativeLayout>

</RelativeLayout>

