<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/widget_layout_click_above"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/Purple">
            <TextView
                android:id="@+id/heading_above"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Tamil Naalkaatti" />

            <ImageView
                android:id="@+id/calendarIconImg_above"
                android:layout_width="32dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:src="@drawable/ic_launcher_drawable" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Engdate_above"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:textColor="@color/Black"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="13 Oct,2016" />
            <TextView
                android:id="@+id/Tamildate_above"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:textColor="@color/Black"
                android:textSize="14dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="புரட்டாசி 18" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/widget_thithi_above"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:textColor="@color/Black"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="துவாதசி	(up to 7:15 pm)திரயோதசி
(சுக்ல பக்ஷ)" />
            <TextView
                android:id="@+id/widget_natchathiram_above"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:textColor="@color/Black"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="சதயம்	(up to 6:18 pm)
பூரட்டாதி" />
            <TextView
                android:id="@+id/widget_mugurtham_above"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:textColor="@color/Black"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="சுப முகூர்த்த நாள் " />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
