<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/widget_layout_click"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/Purple">
            <ImageView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"
                android:text="Tamil Naalkaatti" />

            <ImageView
                android:id="@+id/calendarIconImg"
                android:layout_width="32dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_launcher_drawable" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Engdate"
                android:layout_width="wrap_content"
                android:textColor="@color/Black"
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="13 Oct,2016" />

            <ImageView
                android:id="@+id/Tamildate"
                android:layout_width="wrap_content"
                android:textColor="@color/Black"
                android:textSize="14dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="புரட்டாசி 18" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/widget_thithi"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:textColor="@color/Black"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="துவாதசி	(up to 7:15 pm)திரயோதசி
(சுக்ல பக்ஷ)" />
            <ImageView
                android:id="@+id/widget_natchathiram"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:textColor="@color/Black"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="சதயம்	(up to 6:18 pm)
பூரட்டாதி" />
            <ImageView
                android:id="@+id/widget_mugurtham"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:textColor="@color/Black"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text="சுப முகூர்த்த நாள் " />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
